firewall:
  install: True
  enabled: True
  flush: False

  input:
    strict: True
    block_nomatch: False

    services:
      ssh:
        ips_allow:
          - 192.168.0.0/16
          - 10.0.2.12/32
        ips_remove:
          - 10.0.2.10/32
      http:
        ips_allow:
          - 0.0.0.0/0
      https:
        ips_allow:
          - 0.0.0.0/0
      ftp:
        remove: True
        ips_allow:
          - 0.0.0.0/0

    whitelist:
      networks:
        ips_allow:
          - 10.0.2.2/32

  output:
    strict: False
    services:
      ssh:
        block_nomatch: True
        ips_allow:
          - 192.168.0.0/16
      http:
        block_nomatch: True
        ips_allow:
          - 192.168.0.0/16
      https:
        ips_allow:
          - 192.168.0.0/16

    whitelist:
      networks:
        ips_allow:
          - 10.0.2.2/32
        ips_remove:
          - 10.0.2.10/32

  #Suppport nat
  # iptables -t nat -A POSTROUTING -o eth0 -s 192.168.18.0/24 -d 10.20.0.2 -j MASQUERADE
  # iptables -t nat -A POSTROUTING -o eth0 -s 192.168.18.0/24 -d 172.31.0.2 -j MASQUERADE
  nat:
    eth0:
      rules:
        '192.168.18.0/24':
          - 10.20.0.2
        '192.168.18.0/24':
          - 172.31.0.2
