{% import_yaml 'iptables/defaults.yaml' as defaults %}
{% import_yaml 'iptables/osfamilymap.yaml' as osfamilymap %}

{% set firewall = salt['grains.filter_by'](
    defaults,
    merge = salt['grains.filter_by'](
        osfamilymap,
        grain='os_family',
        merge = salt['pillar.get']('firewall', {})
        ),
    base='firewall')
%}
